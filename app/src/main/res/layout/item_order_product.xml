<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:background="@color/colorBackground"
    android:padding="8dp">


    <ImageView
        android:layout_width="135dp"
        android:layout_height="185dp"
        android:id="@+id/img_product"
        android:layout_marginTop="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="12sp"
        android:id="@+id/name_product"
        android:textStyle="bold"
        android:textColor="@color/textColor"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/img_product"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:id="@+id/layout_"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/img_product"
        android:layout_below="@id/name_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_done_all_24"
            android:tint="#7ADD12"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#7ADD12"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="خریداری شده"/>

    </LinearLayout>

    <TextView
        android:layout_marginStart="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/colorBackground"
        android:background="@drawable/bg_tokent"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:gravity="center"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:id="@+id/txt_token_pay_off"
        android:layout_below="@id/layout_"
        android:layout_toLeftOf="@id/img_product"
        android:layout_marginTop="8dp"
        android:text="شماره بیگیری سفارش : 852741963"/>


    <TextView
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        android:layout_below="@id/txt_token_pay_off"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:text="2500000"
        android:id="@+id/txt_price"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/img_product"
        android:layout_marginTop="8dp"/>


</RelativeLayout>