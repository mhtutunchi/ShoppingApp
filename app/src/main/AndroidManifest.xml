<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.shoppingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShoppingApp"
        android:usesCleartextTraffic="true"
        tools:replace="android:theme">
        <activity
            android:name=".activity.ShowProductFilterActivity"
            android:exported="true" />
        <activity
            android:name=".activity.BrandProductActivity"
            android:exported="true" />
        <activity
            android:name=".activity.FilterActivity"
            android:exported="true" />
        <activity
            android:name=".activity.AllProductActivity"
            android:exported="true" />
        <activity
            android:name=".activity.SendCommentActivity"
            android:exported="true" />
        <activity
            android:name=".activity.CommentActivity"
            android:exported="true" />
        <activity
            android:name=".activity.QuestionActivity"
            android:exported="true" />
        <activity
            android:name=".activity.IntroActivity"
            android:exported="true" />
        <activity
            android:name=".activity.RegisterActivity"
            android:exported="true" />
        <activity
            android:name=".activity.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.CompareActivity"
            android:exported="true" />
        <activity
            android:name=".activity.CompareProductActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ChartActivity"
            android:exported="true" />
        <activity
            android:name=".activity.PropertiesProductActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ReviewProductActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ShowDetailProductActivity"
            android:exported="true" />
        <activity
            android:name=".activity.ShowCategoryDetailProductActivity"
            android:exported="true" />
        <activity
            android:name=".activity.DetailCategoryActivity"
            android:exported="true" />
        <activity android:name=".activity.HomeActivity" />
    </application>

</manifest>